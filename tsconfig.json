{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "module": "commonjs",
    "target": "ES2016",
    "lib": [
      "esnext",
      "dom"
    ],
    "noImplicitAny": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~*": ["./*"]
    }
  },
  "include": [
    "index.ts",
    "api/**/*",
    "config/**/*",
    "src/**/*",
    "test/**/*",
    "types/**/*",
    "cli/**/*",
    "migrations/**/*"
  ]
}
